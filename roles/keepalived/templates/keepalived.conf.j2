global_defs {
}

vrrp_instance VI_1 {
    state {{ keepalived_state }}
    interface eth1
    virtual_router_id {{ keepalived_virtual_router_id }}
    priority {{ keepalived_priority }}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass {{ keepalived_authentication_auth_pass }}
    }
    virtual_ipaddress {
{% for ipaddress in keepalived_virtual_ipaddress %}
        {{ ipaddress }}
{% endfor %}
    }
}
