storage "raft" {
  path = "/opt/vault/data"
  node_id = "{{ inventory_hostname }}"
}
cluster_addr = "http://{{ ansible_eth0.ipv4.address }}:8201"
api_addr = "http://{{ ansible_eth0.ipv4.address }}:8200"

